@{
    ViewBag.Title = "GML-eksempelgenerator";
}

<h2>Generér GML fra XSD</h2>
<hr />

@using (Html.BeginForm("GmlFromXsd", "Generate", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-lg-4">
            <div class="input-group">
                <span class="input-group-btn">
                    <span class="btn btn-primary btn-file">
                        Velg XSD-fil @Html.TextBox("xsdfile", null, new { type = "file" })
                    </span>
                </span>
                <input type="text" class="form-control" readonly>
            </div>
        </div>
        <div class="col-lg-8">
            <input type="submit" value="Generér GML" class="btn btn-primary" />
        </div>
    </div>
}

@section scripts{
    <script src="~/Scripts/file-inputelement-handling.js"></script>
}
